<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 서블릿 매핑 추가 -->
    <servlet>
        <servlet-name>loadWifiInfoController</servlet-name>
        <servlet-class>com.zerobase.publicwifi.controller.LoadWifiInfoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loadWifiInfoController</servlet-name>
        <url-pattern>/load-wifi</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>nearbyWifiController</servlet-name>
        <servlet-class>com.zerobase.publicwifi.controller.NearbyWifiController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>nearbyWifiController</servlet-name>
        <url-pattern>/nearby-wifi</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getWifiDetailController</servlet-name>
        <servlet-class>com.zerobase.publicwifi.controller.GetWifiDetailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getWifiDetailController</servlet-name>
        <url-pattern>/wifi-detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>locationHistoryController</servlet-name>
        <servlet-class>com.zerobase.publicwifi.controller.LocationHistoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>locationHistoryController</servlet-name>
        <url-pattern>/location-history</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>bookmarkGroupController</servlet-name>
        <servlet-class>com.zerobase.publicwifi.controller.BookmarkGroupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookmarkGroupController</servlet-name>
        <url-pattern>/bookmark-group</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>bookmarkController</servlet-name>
        <servlet-class>com.zerobase.publicwifi.controller.BookmarkController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookmarkController</servlet-name>
        <url-pattern>/bookmark</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>com.zerobase.publicwifi.listener.AppInitializer</listener-class>
    </listener>

</web-app>
